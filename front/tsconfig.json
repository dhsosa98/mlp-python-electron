{
  "compilerOptions": {
    "allowJs": true,
    "module": "commonjs",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "lib": ["es6", "dom"],
   
    "noImplicitAny": true,
    "sourceMap": true,
    "baseUrl": ".",
    "outDir": "dist",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "jsx": "react-jsx",
    "paths": {
      "*": ["node_modules/*"],
      "path" : [
        " ./node_modules/path-browserify"
     ]
    }
  },
  "include": ["src/**/*", "./src/**/*.ts", "index.d.ts"]
  
}
